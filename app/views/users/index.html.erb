<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6 img-margin">
      <%= profile_img(user, "small") %><br>
      <%= user.name %><br>
      <%= user.email %><br>
      <%= link_to "ユーザ詳細", user_path(user), class: "btn btn-default margin-top10" %>
      <%= render "follow_form", user:user %>
    </div>
  <%end%>
</div>
